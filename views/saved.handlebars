<div class="row">
    <div class="col-12">
        <div class="jumbotron titleJumbotron">
            <div class="headerDivJumbotron">
                <div id="headerJumbotron">
                    <h6 class="text-center">Mongo Scraper</h6>
                </div>
            </div>
        </div>
    </div>
</div>

<nav class="navbar navbar-expand" id="navbar">

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link navLink" href="/">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link navLink" href="/saved">Saved Articles</a>
        </li>
    </ul>

</nav>

<div class="articleContainer">
    <div class="row">

        <div class="col-1">
        </div>

        <div class="col-10 articleColumn">
            {{#each articles }}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{title}}</h3>
                </div>
                <div class="panel-body">
                    <a class="artLink" href={{link}}>{{link}}</a>


                    <button type="button" class="btn btn-primary deleteSavedArticleButton" data-id={{id}}>Delete
                        Article</button>

                    <button type="button" class="btn btn-primary addNoteButton" data-id={{id}}
                        data-notes={{comment}}>Add Note</button>

                    <div id="notes"></div>
                </div>
            </div>
            <br />
            <br />
            {{/each}}


        </div>

        <div class="col-1">
        </div>

    </div>
</div>

<div class="modal fade" id="articleDeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title articleDeleteTitle">Success!</h5>
            </div>
            <div class="modal-body articleDeleteBody">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary deleteSavedArticleModalButton"
                    id="deleteSavedArticleModalButton" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header noteModalHeader">
            </div>
            <div class="modal-body noteModalBody">

            </div>
            <button class='saveNoteButton'>Save Note</button>
            <div class='alertDiv'></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>